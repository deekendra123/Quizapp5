<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/dig"

        android:gravity="center"

        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="#ffffff"

            android:textAlignment="center"
            android:id="@+id/hj"
            android:text="Don't have enough points to participate in the Tournament"
            android:layout_marginTop="16dp"

            />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:id="@+id/codelayout1"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/codelayout"
          >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="12dp"
                android:textColor="#000000"

                android:textAlignment="center"
                android:id="@+id/btearn"
                android:textAllCaps="false"
                android:text="Earn Points"

                android:background="@drawable/button_design"
                android:layout_marginTop="6dp"

                />


        </LinearLayout>



    </LinearLayout>



</LinearLayout>