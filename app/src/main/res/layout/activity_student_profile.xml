<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".School_Quiz.StudentProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bgprofile">

        <ImageButton
            android:id="@+id/fullscreen_dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_clear_black_24dp"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text=""
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textSize="22dp" />



    </RelativeLayout>


    <ImageView
        android:id="@+id/userIcon"
        android:layout_width="105dp"
        android:layout_height="105dp"

        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="94dp"
        android:adjustViewBounds="true"
        android:elevation="4dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_profile"
        tools:ignore="VectorDrawableCompat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/userIcon"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userIcon"

            android:layout_gravity="right"
            android:background="@drawable/bgsc"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvscore"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:drawableLeft="@drawable/ic_moneys"
                android:drawablePadding="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/userEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:drawableLeft="@drawable/ic_message1"
            android:drawablePadding="15dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/userDoB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:drawableLeft="@drawable/ic_cake"
            android:drawablePadding="15dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="18dp" />





        <TextView
            android:id="@+id/userSchoolName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:drawableLeft="@drawable/ic_school"
            android:drawablePadding="15dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/school_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:drawableLeft="@drawable/ic_binary_code"
            android:drawablePadding="15dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="18dp" />


        <Button
            android:id="@+id/editProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:background="@drawable/buttons"
            android:text="Edit Details"
            android:textColor="#ffffff" />

    </LinearLayout>

</RelativeLayout>