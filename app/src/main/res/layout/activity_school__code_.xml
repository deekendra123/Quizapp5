<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".School_Quiz.School_Code_Activity">

    <TextView
        android:id="@+id/buttonSkip"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:text=""
        android:gravity="right"
        android:layout_marginTop="17dp"
        android:layout_gravity="right"
        android:textColor="#ffffff"
        android:textSize="12dp"
        android:textStyle="bold"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"

        >






        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/logo"

            app:srcCompat="@drawable/learn"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Welcome to the World of Aptitude Learning"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="80dp"
                android:layout_marginLeft="80dp"
                android:id="@+id/t1"
                android:layout_marginTop="10dp"
                android:textSize="17dp"
                android:textStyle="bold"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:gravity="center"

            >


            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="50dp"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"

                android:background="@drawable/shape">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    app:srcCompat="@drawable/ic_name"
                    tools:ignore="VectorDrawableCompat" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="45dp"
                    android:background="#B9B8B8"
                    android:layout_marginLeft="8dp"/>


                <EditText
                    android:layout_width="303dp"
                    android:layout_height="match_parent"
                    android:id="@+id/editText11"

                    android:textSize="12dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:layout_marginLeft="10dp"
                    android:cursorVisible="true"
                    android:inputType="text"
                    android:textCursorDrawable="@null"
                    android:hint="Have a School Code ? Enter here"/>




            </LinearLayout>


            <ImageView
                android:id="@+id/btsubmit"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:layout_gravity="center"

                android:background="@drawable/btcircle1"
                app:srcCompat="@drawable/ic_arrow"
                android:textColor="#ffffff"
                tools:ignore="VectorDrawableCompat" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>