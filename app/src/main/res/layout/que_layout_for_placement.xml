<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView"
      >


        <TextView
            android:id="@+id/questionnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/card_view"
            android:layout_marginTop="12dp"
            android:text="1/10"
            android:textAlignment="center"
            android:layout_marginLeft="12dp"
            android:textColor="@color/white"

            android:textSize="20dp" />

        <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/questionnumber"
        android:layout_marginRight="10dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/imgCategory1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />



            <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="17dp"
            android:textColor="#000000"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"

            android:textAlignment="textStart"
            android:id="@+id/question"
            android:gravity="center"

            tools:ignore="RtlCompat" />

    </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView"
        android:id="@+id/relativeLayout"
        >



    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/questionBookmark"
        android:background="@drawable/ic_bookmark2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="17dp"
        android:layout_marginTop="8dp"

        />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/relativeLayout"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <Button
                android:id="@+id/rdops1"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:text="option 1"
                android:layout_alignParentLeft="true"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="13dp"

                />


            <Button
                android:id="@+id/rdops2"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:textSize="13dp"

                android:gravity="center"
                android:text="option 2"

                android:layout_marginTop="5dp"
                android:textAllCaps="false"
                android:textColor="#000000" />




            <Button
                android:id="@+id/rdops3"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:text="option 3"
                android:textAllCaps="false"

                android:layout_marginTop="5dp"

                android:gravity="center"
                android:textSize="13dp"
                android:textAlignment="center"
                android:textColor="#000000" />

            <Button
                android:id="@+id/rdops4"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:textAllCaps="false"
                android:layout_height="55dp"
                android:textSize="13dp"

                android:text="option 4"
                android:layout_marginLeft="10dp"

                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="#000000" />


</LinearLayout>

    </RelativeLayout>
</RelativeLayout>