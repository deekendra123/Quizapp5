<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="270dp"
    android:layout_height="350dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="330dp"
        app:cardBackgroundColor="#ffffff"

        app:cardCornerRadius="17dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"

                    android:layout_marginTop="10dp"
                    android:background="@drawable/quiz" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/qdate"
                    android:textSize="20dp"

                    android:layout_marginTop="20dp"
                    android:textColor="#ffffff"

                    android:layout_marginBottom="12dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:layout_marginTop="5dp"

            android:layout_margin="7dp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/qdates"
                android:textSize="14dp"
                android:layout_marginTop="23dp"

                android:text="Give Correct Answer and Earn Coins and use these coins to buy or unlock multiple items"

                android:textColor="#000000"

                android:layout_gravity="center"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Play Quiz"
                android:layout_marginLeft="10dp"

                android:id="@+id/playquiz"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textColor="#ffffff"
                android:background="@drawable/bgback2"
                android:layout_marginTop="25dp"/>

        </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>