<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    style="@style/CustomBottomSheetDialogTheme"
    android:background="@drawable/bgcard2"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout4">

            <ImageButton
                android:id="@+id/fullscreen_dialog_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_clear_black_24dp"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/tvscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_marginRight="15dp"
                android:drawableLeft="@drawable/ic_moneys"
                android:drawablePadding="10dp"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="20dp" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/e2buddy"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/cardView"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:elevation="4dp"
        android:background="@drawable/registration"
        tools:ignore="VectorDrawableCompat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/e2buddy"
        android:id="@+id/linear">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:layout_below="@+id/e2buddy"
            android:id="@+id/text"
            android:text="Rules :"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/e2buddy"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/linear1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:layout_below="@+id/e2buddy"
            android:id="@+id/text1"
            android:text="10 Questions"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/ic_check"
            android:drawablePadding="7dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:layout_below="@+id/e2buddy"
            android:id="@+id/text2"
            android:text="10 seconds/question"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_check"
            android:drawablePadding="7dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:layout_below="@+id/e2buddy"
            android:id="@+id/text3"
            android:text="Answer Correctly"
            android:drawableLeft="@drawable/ic_check"
            android:drawablePadding="7dp"

            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_check"
            android:drawablePadding="7dp"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:layout_below="@+id/e2buddy"
            android:id="@+id/text4"
            android:text="Win 5000 Points"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:layout_below="@+id/e2buddy"
            android:id="@+id/text5"
            android:text="No Negative for wrong answers"
            android:drawableLeft="@drawable/ic_check"
            android:drawablePadding="7dp"
            android:layout_marginTop="10dp"

            />

    </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        android:layout_centerInParent="true"
        android:background="@drawable/button_design"
        android:layout_marginTop="26dp"
        android:textColor="#000000"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:drawableLeft="@drawable/ic_moneys"
        android:text="200 Points to Play Tournament"
        android:textAllCaps="false"
        android:drawablePadding="10dp"/>
</RelativeLayout>