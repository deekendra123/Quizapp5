<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/CustomBottomSheetDialogTheme"
    android:background="@android:color/transparent"
    >

    <ImageView
        android:id="@+id/userimg"
        android:layout_width="125dp"
        android:layout_height="115dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"

        android:elevation="4dp"
        android:background="@drawable/logo_e2"

        />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:background="@drawable/dialogbackground"
        android:backgroundTint="#FFFFFF"
        android:orientation="vertical"
        android:paddingBottom="10dp">










        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="vertical"

            android:layout_marginTop="80dp"

            android:paddingBottom="8dp"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/faq"
                android:layout_gravity="center_vertical"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:drawablePadding="15dp"
                android:textSize="19sp"
                android:textStyle="bold"
                android:text="What Benefits you will get:"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text1"
                android:textColor="#535151"

                android:drawablePadding="15dp"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_check"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="8dp"
                android:text="An Industrial Experience Letter"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text2"
                android:textColor="#535151"
                android:drawableLeft="@drawable/ic_check"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:drawablePadding="15dp"
                android:textSize="16sp"
                android:text="Detailed Project Report"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text3"
                android:textColor="#535151"
                android:drawableLeft="@drawable/ic_check"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="8dp"
                android:drawablePadding="15dp"
                android:textSize="16sp"
                android:text="Recommendation Letter"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text4"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/ic_check"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="8dp"
                android:textColor="#535151"
                android:drawablePadding="15dp"
                android:textSize="16sp"
                android:text="Strong Resume"/>





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="horizontal"

            android:layout_marginTop="10dp"
            android:gravity="center"

            android:paddingBottom="8dp">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btApply"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/bgback"
                android:gravity="center"
                android:padding="8dp"
                android:text="Click to Apply"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

  </RelativeLayout>