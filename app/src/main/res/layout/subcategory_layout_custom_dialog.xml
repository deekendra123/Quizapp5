<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/dig"
        android:orientation="horizontal"
        android:id="@+id/layout8"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:id="@+id/childCategoryName"
            android:text="Sachin Tendulkar"
            android:layout_marginTop="10dp"
            android:textStyle="bold"

            />


        <ImageView

            android:id="@+id/childCategoryImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/childCategoryName"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/userimg"
            android:gravity="center"
            android:textColor="#4e4d4d"

            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/userrank"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:id="@+id/goodjob"

            android:text=""

            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout8"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="40dp"


        android:orientation="horizontal">

<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:id="@+id/recyclerViewSubCategory"
    android:layout_marginTop="15dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_gravity="center_horizontal"

    >

</androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>


   </RelativeLayout>