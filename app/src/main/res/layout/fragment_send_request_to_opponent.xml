<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.aptitude.education.e2buddy.One_on_One_Quiz_Challenge.SendRequestToOpponentFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.WhiteAccent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.WhiteAccent" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                >
            <TextView
                android:id="@+id/tvchallenge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Challenge Your Friends"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_marginTop="15dp"
                />
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:id="@+id/img_info"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_information"
                />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="67dp"
            android:textColorHint="#000000"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="#000000"
            android:background="@drawable/searchview"
            />

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/onlineusers"
        android:layout_marginTop="115dp"
        android:padding="10dp"

        >

    </androidx.recyclerview.widget.RecyclerView>



</FrameLayout>
