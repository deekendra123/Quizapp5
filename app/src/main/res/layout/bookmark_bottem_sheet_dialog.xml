<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/CustomBottomSheetDialogTheme"
    android:background="@android:color/transparent"
    >

    <TextView
        android:id="@+id/btparticipate"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@color/colorPrimary"
        android:padding="8dp"
        android:text="Test Review"
        android:textSize="15dp"
 />


    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:background="@drawable/dialogbackground"
        android:backgroundTint="#FFFFFF"
        android:orientation="vertical"


        android:gravity="center"
        android:paddingBottom="50dp">


    <androidx.recyclerview.widget.RecyclerView

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/recyclerViewBookmarks"
    android:layout_gravity="center"

    android:layout_marginLeft="30dp"
    android:layout_marginRight="10dp"

    android:layout_marginTop="36dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Answered"
                android:drawablePadding="6dp"
                android:drawableLeft="@drawable/ic_bg4"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="6dp"
                android:text="Answered"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:drawableLeft="@drawable/ic_bg3"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bookmarked"
                android:drawableLeft="@drawable/ic_bg5"
                android:drawablePadding="6dp"
                />

        </LinearLayout>

    </LinearLayout>

  </RelativeLayout>