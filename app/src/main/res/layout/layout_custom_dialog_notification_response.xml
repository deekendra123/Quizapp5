<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/dig"

        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tvcancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_clear_black_24dp"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_marginTop="12dp"
            android:layout_marginRight="15dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dig"
            android:orientation="horizontal"

            android:layout_gravity="center"
            android:gravity="center"

            >
            <ImageView
                android:id="@+id/smileface"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_marginTop="15dp"
                android:elevation="4dp"
                android:layout_marginRight="20dp"

                app:srcCompat="@drawable/ic_black_user_shape"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/dot1"
                android:layout_marginTop="10dp"
                android:src="@drawable/round_animation"
                />
            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="17dp"
                android:id="@+id/dot2"
                android:layout_marginTop="10dp"
                android:src="@drawable/round_animation"/>
            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:id="@+id/dot3"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/round_animation"/>

            <ImageView
                android:id="@+id/smileface1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="40dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_marginTop="15dp"
                android:elevation="4dp"

                app:srcCompat="@drawable/ic_black_user_shape"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#ffffff"

            android:textAlignment="center"
            android:id="@+id/hj"
            android:text="Wait for response"
            android:layout_marginTop="25dp"

            />


        <TextView


            android:id="@+id/userrank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"

            android:layout_marginTop="18dp"

            android:background="@drawable/circle"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_below="@+id/hj"
            android:textColor="#4e4d4d"
            android:textStyle="bold"
            />


    </LinearLayout>





   </LinearLayout>