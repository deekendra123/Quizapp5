<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#011F41"
    android:layout_gravity="center"
    tools:context="com.aptitude.education.e2buddy.Intro.PhoneVerificationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@color/white"
        android:scrollbarSize="2dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/logo"

        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/learn"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="Welcome to the World of Aptitude Learning"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:id="@+id/t1"
        android:layout_marginTop="10dp"
        android:textSize="17dp"
        android:textStyle="bold"/>

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            app:srcCompat="@drawable/ic_name"/>
        <View
            android:layout_width="2dp"
            android:layout_height="45dp"
            android:background="#B9B8B8"
            android:layout_marginLeft="8dp"/>


        <EditText
            android:layout_width="303dp"
            android:layout_height="match_parent"
            android:id="@+id/editText11"

            android:textSize="15dp"
            android:layout_gravity="center"
            android:background="@null"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:layout_marginLeft="10dp"
            android:cursorVisible="true"
            android:inputType="text"


            android:textCursorDrawable="@null"
            android:hint="Enter Name"/>

    </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="23dp"
                android:orientation="horizontal"
                android:background="@drawable/shape">

                <com.rilixtech.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    app:ccp_defaultNameCode="IN"
                    app:ccp_textSize="15dp"
                    app:ccp_textColor="#ffffff"
                    android:layout_marginTop="5dp"
                    app:ccp_defaultCode="91"/>


                <View
                    android:layout_width="2dp"
                    android:layout_height="45dp"
                    android:background="#B9B8B8"
                    android:layout_marginLeft="8dp"/>


                <EditText
                    android:layout_width="303dp"
                    android:layout_height="match_parent"

                    android:id="@+id/editText12"
                    android:cursorVisible="true"
                    android:textColor="#ffffff"
                    android:inputType="number"
                    android:textCursorDrawable="@null"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:background="@null"
                    android:textColorHint="#ffffff"
                    android:layout_marginLeft="10dp"
                    android:hint="Enter Phone Number"/>

               </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="23dp"
                android:orientation="horizontal"

                android:background="@drawable/shape">



                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView3"
                    android:layout_marginTop="4dp"
                    app:srcCompat="@drawable/ic_message"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="45dp"
                    android:background="#B9B8B8"
                    android:layout_marginLeft="8dp"/>


                <EditText
                    android:layout_width="303dp"
                    android:layout_height="match_parent"
                    android:id="@+id/editText13"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:background="@null"
                    android:textColorHint="#ffffff"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:layout_marginLeft="10dp"
                    android:textCursorDrawable="@null"
                    android:hint="Enter Email"
                    android:cursorVisible="true"
                    />



            </LinearLayout>
        </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Request OTP"
                android:id="@+id/t2"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/button8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"

                android:background="@drawable/btcircle1"
                app:srcCompat="@drawable/ic_arrow_forward_black_24dp"
                android:textColor="#ffffff" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Fields with * are mandatory to fill"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/t4"
            android:layout_marginTop="20dp"
            android:textSize="13dp"
            android:textStyle="bold"/>

    </LinearLayout>
    </ScrollView>

</LinearLayout>
