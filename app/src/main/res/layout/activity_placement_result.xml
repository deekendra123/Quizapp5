<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bgcard2"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Placement_Papers.PlacementResultActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="23dp"
        android:id="@+id/tvName"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:text="Accenture Placement"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/userimg"
            android:layout_marginTop="10dp"

            android:background="@drawable/ic_checked"
            >

        </ImageView>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="27dp"
        android:id="@+id/tv1"
        android:textAlignment="center"
        android:layout_marginTop="13dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="Completed Successfully"
        />


    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:id="@+id/img4"
        app:srcCompat="@drawable/goforit"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginRight="10dp"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:text="Answers Given"
                android:id="@+id/tvans"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textAlignment="center"
                android:layout_marginTop="3dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:id="@+id/tvAnswerGiven"
                android:text=""
                />

        </LinearLayout>

        <View
            android:layout_width="1.5dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:background="#ffffff"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:text="Time Taken"
                android:id="@+id/tscore"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textAlignment="center"
                android:layout_marginTop="3dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:id="@+id/tvTimeTaken"
                android:text="12 min"
                />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="View Answer"
        android:layout_marginTop="20dp"
        android:id="@+id/btViewAnswer"
        android:textAllCaps="false"
        android:background="@drawable/button_design"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imgHome"
        android:layout_marginTop="15dp"

        android:background="@drawable/circlehome"
        app:srcCompat="@drawable/ic_home_black_24dp"
        >

    </ImageView>





</LinearLayout>