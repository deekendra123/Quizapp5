<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:background="@drawable/mainbackground"
    tools:context=".DisplayAnswer.ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/userimg"
            android:layout_marginTop="10dp"

            android:background="@drawable/ic_profile">

        </ImageView>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="27dp"
        android:id="@+id/tv1"
        android:textAlignment="center"
        android:layout_marginTop="3dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="Congratulations!"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/linear"

        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:id="@+id/img1"
            app:srcCompat="@drawable/ic_star1"
            />
        <ImageView
            android:layout_width="50dp"
            android:id="@+id/img2"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            app:srcCompat="@drawable/ic_star1"
            />
        <ImageView
            android:id="@+id/img3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/ic_star1"

            android:layout_marginTop="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"


        android:id="@+id/layouts"
        >
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:id="@+id/img4"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="10dp"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:layout_marginTop="10dp"
                    android:text="Correct Answers"
                    android:id="@+id/tvans"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="23dp"
                    android:textAlignment="center"
                    android:layout_marginTop="3dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:id="@+id/tvcorrectans"
                    android:text=""
                    />

            </LinearLayout>

            <View
                android:layout_width="1.5dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp"
                android:background="#ffffff"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:layout_marginTop="10dp"
                    android:text="Coins Earned"
                    android:id="@+id/tscore"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="23dp"
                    android:textAlignment="center"
                    android:layout_marginTop="3dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:id="@+id/tscore1"
                    android:text=""
                    />

            </LinearLayout>


        </LinearLayout>


        <Button
            android:layout_width="320dp"
            android:layout_height="0dp"
            android:text="View Answer"


            android:textAllCaps="false"
            android:layout_weight="1.6"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/btview"/>

        <Button
            android:layout_width="320dp"
            android:layout_height="0dp"
            android:text="Leader Board"

            android:layout_gravity="center"
            android:layout_weight="1.6"
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:id="@+id/btleaderboard"/>

    </LinearLayout>


</LinearLayout>