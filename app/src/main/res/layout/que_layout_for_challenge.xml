<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="15dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"

            android:textSize="20dp"
            android:textColor="#000"

            android:layout_marginTop="5dp"
            
            android:id="@+id/questionnumber"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="17dp"
            android:gravity="center"

            android:textColor="#565555"

            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="23dp"
            android:id="@+id/question"
            />

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/rdops1"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:text="option 1"
                android:layout_alignParentLeft="true"
                android:textAllCaps="false"

                android:textColor="#000000"
                android:textSize="13dp"


                />

            <Button
                android:id="@+id/rdops2"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:textSize="13dp"
                android:layout_marginRight="20dp"
                android:text="option 2"

                android:textAllCaps="false"
                android:layout_alignParentRight="true"
                android:textColor="#000000" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/rdops3"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:text="option 3"
                android:textAllCaps="false"
                android:layout_alignParentLeft="true"

                android:textSize="13dp"
                android:textAlignment="center"
                android:textColor="#000000" />

            <Button
                android:id="@+id/rdops4"
                android:layout_width="150dp"
                android:textAllCaps="false"
                android:layout_height="100dp"

                android:textSize="13dp"
                android:layout_alignParentRight="true"

                android:layout_marginRight="20dp"
                android:text="option 4"
                
                android:textColor="#000000" />

        </RelativeLayout>
    </RelativeLayout>




    <TextView
        android:id="@+id/selectedans"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/question"
        android:layout_alignStart="@+id/question"
        android:layout_below="@+id/question"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textColor="#000"
        android:textSize="15dp" />

</LinearLayout>